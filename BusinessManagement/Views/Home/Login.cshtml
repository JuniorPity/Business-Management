@model BusinessManagement.Models.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<head>
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Scripts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="row profileTopBar">
        <div class="col-md-4 col-md-offset-4 text-center">
            <div class="panel panel-default infoPanel">
                <div class="panel-body text-center">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="panelTitle">Login</p>
                            <hr />
                        </div>
                    </div>
                    <div id="errorRow" class="row row-padding" style="display:none">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="alert alert-danger error" role="alert">
                                <strong>Oops!</strong> Invalid username and/or password. Please try again.
                            </div>
                        </div>
                    </div>
                    <div class="row row-padding">
                        <div class="col-md-6 col-md-offset-3">
                            <input type="email" class="form-control" id="loginEmail" aria-describedby="emailHelp" placeholder="Username">
                        </div>
                    </div>
                    <div class="row row-padding">
                        <div class="col-md-6 col-md-offset-3">
                            <input type="password" class="form-control" id="loginPassword" aria-describedby="passwordHelp" placeholder="Password">
                        </div>
                    </div>
                    <div class="row row-padding">
                        <div class="col-md-3 col-md-offset-3">
                            <button id="loginData" class="btn btn-primary" style="width:100%">Login</button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-info" style="width:100%">Sign Up</button>
                        </div>
                    </div>
                    <div class="row row-padding">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="rememberMeCheck" value="">
                                <label class="form-check-label" for="rememberMeCheck">Remember Me</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        $('#loginData').click(function () {
            var data = {
                "username": $("#loginEmail").val(),
                "password": $("#loginPassword").val()
            };
            $.ajax({
                url: "/Home/Login",
                type: "POST",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response.Success) {
                        window.location.href = '@Url.Action("Time", "TimeCard")';
                    }
                    else
                        $("#errorRow").show();
                },
                error: function () {
                    $("#errorRow").show();
                }
            });
        });
    });
</script>

