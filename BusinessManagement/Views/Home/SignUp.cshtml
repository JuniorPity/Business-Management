@model BusinessManagement.Models.User
@{
    Layout = null;
    var code = Request.Params["invite"];
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Scripts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <script src="~/Scripts/Login.js" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post, new { id = "signUpForm" }))
    {
        @Html.AntiForgeryToken();
        <div class="row profileTopBar">
            <div class="col-md-4 col-md-offset-4 text-center">
                <div class="panel panel-default infoPanel">
                    <div class="panel-body text-center">
                        <div class="col-md-12">
                            <p class="panelTitle">Sign Up</p>
                            <hr />
                        </div>
                        <div id="errorRow" class="row row-padding" style="display:none">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="alert alert-danger error" role="alert">
                                    <strong>Oops!</strong> Your passwords do not match. Please try again.
                                </div>
                            </div>
                        </div>
                        <div id="errorRow2" class="row row-padding" style="display:none">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="alert alert-danger error" role="alert">
                                    <strong>Sorry!</strong> You must enter all the required fields. Please try again.
                                </div>
                            </div>
                        </div>
                        <div id="errorRow3" class="row row-padding" style="display:none">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="alert alert-danger error" role="alert">
                                    <strong>Oops!</strong> Your organization names do not match. Please try again.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-md-offset-1 row-padding">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                            </div>
                            <div class="col-md-5 row-padding">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-md-offset-1 row-padding">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "Email" })
                            </div>
                            <div class="col-md-5 row-padding">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Phone Number" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-md-offset-1 row-padding">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                            </div>
                            <div class="col-md-5 row-padding">
                                <input id="confirmPassword" class="form-control" type="password" placeholder="Confirm Password"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-md-offset-1 row-padding">
                                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @type = "date", @placeholder = "Date of Birth" })
                            </div>
                            <div class="col-md-5 row-padding">
                                <input id="organization" class="form-control" type="text" placeholder="" readonly="readonly" value="Organization: @code"/>
                            </div>
                        </div>
                        <br />
                        @if (code == null)
                        {
                            <div class="row row-padding">
                                <div class="col-md-6 col-md-offset-3">
                                    <p class="panelTitle">Organization</p>
                                    <hr />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5 col-md-offset-1 row-padding">
                                    @Html.TextBoxFor(m => m.Organization.Label, new { @class = "form-control", @type = "text", @placeholder = "Organization Name" })
                                </div>
                                <div class="col-md-5 row-padding">
                                    <input id="confirmName" class="form-control" type="text" placeholder="Confirm Organization" />
                                </div>
                            </div>
                        }
                        <br />
                        <div class="row row-padding">
                            <div class="col-md-6 col-md-offset-3">
                                <button id="register" class="btn btn-info" style="width:100%">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
